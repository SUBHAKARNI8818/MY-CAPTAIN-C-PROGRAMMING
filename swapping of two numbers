//swapping of two numbers
#include <stdio.h>
int main()
{
    int a,b;
    printf("Enter an number: ");
    scanf("%d", &a); 
    printf("Enter an number: ");
    scanf("%d", &b); 
    printf("Before swapping:  a=%d",a);
    printf("\nBefore swapping:  b=%d",b);
    a=a+b; 
    b=a-b;
    a=a-b;
    printf("\nAfter  swapping:  a=%d",a);
    printf("\nAfter  swapping:  b=%d",b);
    return 0;
}
